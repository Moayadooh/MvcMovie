@model List<Item>
@{
    ViewData["Title"] = "Items Page";
}

<div class="text-center">
    <h1 class="display-4">Items</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
